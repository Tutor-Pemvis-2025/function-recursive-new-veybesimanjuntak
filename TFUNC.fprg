    <function name="angka" type="Integer" variable="result">
        <parameters>
            <parameter name="x" type="Integer" array="False"/>
        </parameters>
        <body>
            <declare name="result, hasilb" type="Integer" array="False" size=""/>
            <if expression="x==1">
                <then>
                    <assign variable="result" expression="1"/>
                </then>
                <else>
                    <assign variable="hasilb" expression="angka(x-1)"/>
                    <assign variable="result" expression="x+hasilb"/>
                </else>
            </if>
        </body>
    </function>
