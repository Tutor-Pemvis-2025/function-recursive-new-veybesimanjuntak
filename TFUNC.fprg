    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="x, hasil" type="Integer" array="False" size=""/>
            <input variable="x"/>
            <output expression="&quot;Bilangan yang dimasukkan : &quot; &amp; x" newline="True"/>
            <call expression="angka(x)"/>
            <output expression="&quot;Hasil perhitungan rekursif : &quot; &amp; angka(x)" newline="True"/>
        </body>
